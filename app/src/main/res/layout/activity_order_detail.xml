<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/btnTake"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:onClick="onClick"
            android:text="Take"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutTop"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="100dp" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layoutTop"
        android:paddingTop="50dp">

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="3dp"
            android:layout_below="@id/ratingBar">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvCategoryname"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgName"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_user" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/imgName"
                            android:textColor="#000"
                            android:fontFamily="sans-serif"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgPhone"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_phone" />

                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/imgPhone"
                            android:textColor="#000"
                            android:fontFamily="sans-serif"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgStartDate"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_date" />

                        <TextView
                            android:id="@+id/tvStartDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/imgStartDate"
                            android:textColor="#000"
                            android:fontFamily="sans-serif"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgTime"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_time" />

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/imgTime"
                            android:textColor="#000"
                            android:fontFamily="sans-serif"/>
                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgEndDate"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_date" />

                        <TextView
                            android:id="@+id/tvEndDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/imgEndDate"
                            android:textColor="#000"
                            android:fontFamily="sans-serif"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgEndTime"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_time" />

                        <TextView
                            android:id="@+id/tvEndTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/imgEndTime"
                            android:textColor="#000"
                            android:fontFamily="sans-serif"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/imgLocation"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/imgLocation"
                            android:textColor="#000"
                            android:fontFamily="sans-serif"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imgFare"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_fare" />

                        <TextView
                            android:id="@+id/tvFare"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="20dp"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/imgFare"
                            android:textColor="#000"
                            android:fontFamily="sans-serif"/>
                    </RelativeLayout>

                </LinearLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imgNotes"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_note" />

                    <TextView
                        android:id="@+id/tvNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/imgNotes"
                        android:textColor="#000"
                        android:fontFamily="sans-serif"/>

                </RelativeLayout>



            </LinearLayout>

        </android.support.v7.widget.CardView>




    </RelativeLayout>

    <ImageView
        android:id="@+id/imgPicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/layoutBottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/tmp_logo"
        />

</RelativeLayout>